<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="dziewulskij" id="656810192060231">
        <createTable tableName="reservation">
            <column autoIncrement="true" name="reservation_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="lobby_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_from" type="DATETIME">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="date_to" type="DATETIME">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="confirmed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="lobby_id"
                                 baseTableName="reservation"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"
                                 constraintName="reservation_lobby_constraint"
                                 referencedColumnNames="lobby_id"
                                 referencedTableName="lobby"/>

    </changeSet>

</databaseChangeLog>
