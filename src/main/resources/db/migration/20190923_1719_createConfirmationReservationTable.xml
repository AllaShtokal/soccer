<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="wawerk" id="1569252446460">
        <createTable tableName="confirmation_reservation">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="reservation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="expiration_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="time_to_mail_send" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="email_sent" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
