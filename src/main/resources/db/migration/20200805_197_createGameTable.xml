<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="shtokala" id="6568201920656454">
        <createTable tableName="game">
            <column autoIncrement="true"
                    name="game_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="match_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="match_id"
                                 baseTableName="game"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"
                                 constraintName="game_constraint"
                                 referencedColumnNames="match_id"
                                 referencedTableName="match"/>
    </changeSet>
</databaseChangeLog>
